<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>To-Do App</title>
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
    }

    body {
      background: #f2f5f9;
      padding: 0;
    }

    .navbar {
      background: #4caf50;
      color: white;
      padding: 14px 24px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .navbar h1 {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .nav-links {
      display: flex;
      flex-wrap: wrap;
      gap: 16px;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      font-size: 14px;
    }

    .nav-links a:hover {
      text-decoration: underline;
    }

    .container {
      max-width: 500px;
      margin: 30px auto;
      background: white;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      padding: 24px;
    }

    h2 {
      text-align: center;
      color: #333;
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 20px;
      gap: 10px;
    }

    input[type="text"] {
      flex: 1 1 200px;
      padding: 10px 14px;
      border: 2px solid #ccc;
      border-radius: 8px;
      font-size: 16px;
    }

    button.add-btn {
      background-color: #4caf50;
      color: white;
      border: none;
      padding: 10px 16px;
      border-radius: 8px;
      cursor: pointer;
    }

    a {
      background-color: #4caf50;
      color: white;
      border: none;
      padding: 10px 16px;
      border-radius: 8px;
      cursor: pointer;
      text-decoration: none;
    }
    .delete{
      background-color: #f44336;
    }

    .task {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      background: #f9fafc;
      margin-bottom: 12px;
      padding: 12px;
      border-radius: 10px;
      transition: 0.3s;
    }

    .task:hover {
      background: #eef1f7;
    }

    .task-left {
      display: flex;
      align-items: center;
      flex: 1 1 100%;
    }

    .task input[type="checkbox"] {
      appearance: none;
      width: 20px;
      height: 20px;
      border: 2px solid #ccc;
      border-radius: 50%;
      margin-right: 12px;
      position: relative;
      cursor: pointer;
    }

    .task input[type="checkbox"]:checked {
      background-color: #4caf50;
      border-color: #4caf50;
    }

    .task input[type="checkbox"]:checked::after {
      content: "‚úì";
      color: white;
      position: absolute;
      top: -2px;
      left: 4px;
      font-size: 14px;
    }

    .task label {
      font-size: 16px;
      color: #555;
    }

    .task input[type="checkbox"]:checked + label {
      text-decoration: line-through;
      color: #aaa;
    }

    .task-actions {
      display: flex;
      gap: 8px;
      margin-top: 10px;
    }

    .task-actions button {
      padding: 6px 10px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
      transition: background 0.3s;
    }

    .task-actions .update-btn {
      background-color: #2196f3;
      color: white;
    }

    .task-actions .delete-btn {
      background-color: #f44336;
      color: white;
    }

    .task-actions button:hover {
      opacity: 0.9;
    }

    .footer {
      text-align: center;
      font-size: 12px;
      color: #aaa;
      margin-top: 20px;
    }

    @media (min-width: 600px) {
      .navbar {
        flex-direction: row;
        justify-content: space-between;
      }

      .nav-links {
        gap: 24px;
      }

      .task-left {
        flex: 1;
      }

      .task-actions {
        margin-top: 0;
      }
    }
  </style>
</head>
<body>

  <!-- Navigation Bar -->
  <div class="navbar">
    <h1>TodoApp</h1>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/about">About</a>
    </div>
  </div>

  <!-- Main Container -->
  <div class="container">
    <h2>üìù My To-Do List</h2>

    <!-- Add Task Form -->
    <form action="/create" method="post">
      <input type="text" placeholder="Add new task..." name="task" />
      <button class="add-btn" type="submit">Add</button>
    </form>

    <!-- Task List -->
    <% task.forEach(function(e){ %>
        <div class="task">
          <div class="task-left">
            <input type="checkbox" id="task1" />
            <label for="task1"><%= e.task %></label>
          </div>
          <div class="task-actions">
            <a href="/update/<%= e.id %>">Update</a>
            <a class="delete" href="/delete/<%= e.id %>">Delete</a>
          </div>
        </div>
    <% }) %>

  </div>
</body>
</html>
